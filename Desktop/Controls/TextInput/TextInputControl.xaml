<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:DarkgridToolkit.Desktop.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary
            Source="TextInputTemplate.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style
        x:Key="TextInputStyle"
        TargetType="{x:Type c:TextInputControl}">
        <Setter Property="Template" Value="{StaticResource TextInputTemplate}" />
        <Setter Property="Foreground" Value="{DynamicResource BlackColorBrush}" />
    </Style>

    <Style
        BasedOn="{StaticResource TextInputStyle}"
        TargetType="{x:Type c:TextInputControl}" />
</ResourceDictionary>
